<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:layout_margin="30dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logobasiru"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Basiru"
        android:textColor="@color/warna_teks"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Versi 1.0"
        android:textSize="17dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textAlignment="textStart"
        android:text="Basiru adalah platform crowdfunding yang ditujukan untuk menghubungkan antara donatur dengan penerima donasi sebagai bentuk bantuan sosial untuk membantu menyalurkan bantuan kepada mereka yang membutuhkan."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textAlignment="textStart"
        android:text="Kabupaten Sumbawa adalah sebuah kabupaten di provinsi Nusa Tenggara Barat, Indonesia. Ibu kotanya adalah Sumbawa Besar. Kabupaten ini terletak di sebagian besar bagian barat pulau Sumbawa. Kabupaten sumbawa termasuk dalam masyarakat yang sampai saat ini menanamkan adat basiru dikehidupan sehari-hari."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:textAlignment="textStart"
        android:text="Basiru diambil dari singkatan bayar siru (bahasa sumbawa) yang berarti saling tolong menolong atau kegiatan balas budi antara orang yang satu dengan yang lain, atau antara masyarakat yang satu dengan masyarakat lain."/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="120dp"
        android:text="Keluar"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_marginTop="10dp"
        android:id="@+id/Keluartentang"
        android:onClick="keluartentang"
        android:layout_height="50dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>